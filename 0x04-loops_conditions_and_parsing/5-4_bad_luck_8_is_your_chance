#!/usr/bin/env bash
# This script is looping from 1 to 10 and displays bad luck for the 4th loop iteration, good luck for the 8th loop iteration, and Best School for the other iterations

# Initialize the counter variable to 1
counter=1

# Loop while the counter is less than or equal to 10
while [ $counter -le 10 ]
do
  # Check if the counter is equal to 4
  if [ $counter -eq 4 ]
  then
    # Print "bad luck" to the standard output
    echo "bad luck"
  # Check if the counter is equal to 8
  elif [ $counter -eq 8 ]
  then
    # Print "good luck" to the standard output
    echo "good luck"
  else
    # Print "Best School" as usual
    echo "Best School"
  fi

  # Increment the counter by 1
  ((counter++))
done
